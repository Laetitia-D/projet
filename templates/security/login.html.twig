{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block extrastyles %}
    <style>
        html,body{
            background-image: linear-gradient(rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.7)), url('{{ asset('img/fete.jpeg') }}');
            background-size: cover;
        }
    </style>
{% endblock %}

{% block body %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
    <form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Connectez-vous</h3>
                </div>
                <div class="card-body">
                    <form>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <label for="inputEmail"></label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>

                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <label for="inputPassword"></label>
                            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
                        </div>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}">

                        <div class="row align-items-center remember">
                            <label for="checkbox"></label>
                            <input type="checkbox" id="checkbox">Se souvenir de moi
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn float-right login_btn">Connexion</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center">
                        <a href="#">Mot de passe oubli√©?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </form>
{% endblock %}

{% block footer %} {{ parent() }}{% endblock %}